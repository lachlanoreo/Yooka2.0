<div class="flex h-full">
  <!-- Left Pane: Task Groups -->
  <div class="w-1/2 overflow-y-auto border-r border-zinc-200 bg-white p-4">
    <div class="space-y-6">
      <% Task::GROUPS.each do |group| %>
        <%= render "plan/task_group", group: group, tasks: @tasks_by_group[group] %>
      <% end %>
    </div>
  </div>

  <!-- Right Pane: Calendar Day View -->
  <div class="w-1/2 overflow-y-auto bg-white p-4">
    <!-- Top Goal -->
    <div class="mb-4">
      <%= render "plan/daily_goal", daily_goal: @daily_goal %>
    </div>

    <!-- Day View Calendar -->
    <div class="rounded-lg border border-zinc-200">
      <%= render "plan/day_view", time_blocks: @time_blocks, google_events: @google_events %>
    </div>

    <!-- Integration Status -->
    <div class="mt-4 space-y-2">
      <% if @google_connected %>
        <div class="rounded-md border border-green-200 bg-green-50 p-3">
          <p class="text-sm text-green-700">Google Calendar connected</p>
        </div>
      <% else %>
        <div class="rounded-md border border-zinc-200 bg-zinc-50 p-3">
          <p class="text-sm text-zinc-600">Google Calendar not connected</p>
          <%= link_to "Connect Google Calendar", "/auth/google_oauth2", method: :post, class: "text-sm text-blue-600 hover:text-blue-800", data: { turbo: false } %>
        </div>
      <% end %>

      <% if @basecamp_connected %>
        <div class="rounded-md border border-green-200 bg-green-50 p-3 flex items-center justify-between">
          <p class="text-sm text-green-700">Basecamp connected</p>
          <%= button_to "Sync Now", basecamp_sync_path, method: :post, class: "rounded-md bg-green-600 px-3 py-1 text-sm text-white hover:bg-green-700", data: { turbo: false } %>
        </div>
      <% else %>
        <div class="rounded-md border border-zinc-200 bg-zinc-50 p-3">
          <p class="text-sm text-zinc-600">Basecamp not connected</p>
          <%
            basecamp_auth_url = "https://launchpad.37signals.com/authorization/new?" + {
              type: 'web_server',
              client_id: ENV['BASECAMP_CLIENT_ID'],
              redirect_uri: "#{request.base_url}/auth/basecamp/callback"
            }.to_query
          %>
          <%= link_to "Connect Basecamp", basecamp_auth_url, class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
