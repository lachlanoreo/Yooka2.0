<div id="<%= dom_id(task) %>"
     class="task-row"
     data-controller="task-row"
     data-task-row-id-value="<%= task.id %>">

  <!-- Checkbox (checked) -->
  <button type="button"
          class="task-row__checkbox task-row__checkbox--checked"
          data-action="click->task-row#toggleComplete">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
  </button>

  <!-- Title -->
  <span class="task-row__title task-row__title--completed">
    <%= task.title %>
  </span>

  <!-- Source Badge -->
  <% if task.basecamp? %>
    <span class="task-row__badge task-row__badge--basecamp">BC</span>
  <% else %>
    <span class="task-row__badge task-row__badge--personal">P</span>
  <% end %>

  <!-- Due date -->
  <% if task.due_date %>
    <span class="task-row__date task-row__date--locked">
      <%= task.due_date.strftime("%-m/%-d") %>
    </span>
  <% end %>
</div>
